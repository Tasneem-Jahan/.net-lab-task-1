
@{
    ViewBag.Title = "Create";
}

<h2>Validating Form</h2>



<form method="POST">

    @Html.ValidationSummary()

    <div class="form-group">

        <label>Enter your name: </label>

        <input class="form-control" type="text" name="name" value="@(Model == null ? "" : Model.Name)" placeholder="Noah Sky">

    </div>

    <div>

        <label>Enter your ID</label>

        <input class="form-control" type="text" name="id" value="@(Model == null ? "" : Model.ID)" placeholder="xx-xxxxx-x">

    </div>

    <div>

        <label>Gender</label>

        @{
            if (Model == null)
            {
                <input type="radio" name="Gender" value="Male" />
                <label>Male</label>

                <input type="radio" name="Gender" value="Female" />
                <label>Female</label>

                <input type="radio" name="Gender" value="Other" />
                <label>Other</label>

            }
            else if (Model.Gender == "Male")
            {
                <input type="radio" name="Gender" value="Male" checked="checked" />
                <label>Male</label>

                <input type="radio" name="Gender" value="Female" />
                <label>Female</label>

                <input type="radio" name="Gender" value="Other" />
                <label>Other</label>
            }
            else if (Model.Gender == "Female")
            {
                <input type="radio" name="Gender" value="Male" />
                <label>Male</label>

                <input type="radio" name="Gender" value="Female" checked="checked" />
                <label>Female</label>

                <input type="radio" name="Gender" value="Other" />
                <label>Other</label>
            }

            else if (Model.Gender == "Other")
            {
                <input type="radio" name="Gender" value="Male" />
                <label>Male</label>

                <input type="radio" name="Gender" value="Female" />
                <label>Female</label>

                <input type="radio" name="Gender" value="Other" checked="checked" />
                <label>Other</label>
            }

            else
            {
                <input type="radio" name="Gender" value="Male" />
                <label>Male</label>

                <input type="radio" name="Gender" value="Female" />
                <label>Female</label>

                <input type="radio" name="Gender" value="Other" />
                <label>Other</label>
            }
        }

    </div>

    <div>

        <label>Enter your email: </label>

        <input class="form-control" type="email" name="email" value="@(Model == null ? "" : Model.Email)" placeholder="xx-xxxxx-x@aiub.edu">

    </div>

    <div>

        <label>Password</label>

        <input class="form-control" type="password" name="password" placeholder="********">

    </div>

    <div>

        <label>Confirm Password</label>

        <input class="form-control" type="password" name="confirm_password" placeholder="********">

    </div>

    <div>

        <label>Date of birth</label>

        <input class="form-control" type="date" name="date_of_birth" value="@(Model == null ? "" : Model.Date_Of_Birth)" placeholder="dd/mm/yyyy">
   
    </div>

    <button type="submit" class="btn btn-secondary">Submit</button>

</form>
